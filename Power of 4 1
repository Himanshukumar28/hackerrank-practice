import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
       if(n<=0){
           System.out.print(false);
           return;
       }
        while(n>1){
            if(n%4 !=0){
                System.out.print(false);
                return;
            }
            n = n/4;
        }
        System.out.print(true);
    }
}
